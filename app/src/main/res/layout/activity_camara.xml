<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CamaraActivity">

    <!-- CONTENIDO PRINCIPAL -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contenedor_principal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <!-- Barra superior con botÃ³n del menÃº -->
        <LinearLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:background="#008E8E"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Icono del menÃº (â˜°) -->
            <ImageView
                android:id="@+id/btnMenu"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_menu"
                android:contentDescription="MenÃº"
                app:tint="#FFFFFF"
                android:padding="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SEÃ‘AVOX"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_marginStart="12dp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Vista de la cÃ¡mara (Preview) -->
        <TextureView
            android:id="@+id/textureView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/top_bar"
            app:layout_constraintBottom_toTopOf="@id/panelTraduccion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- PANEL QUE MUESTRA EL TEXTO DE LA SEÃ‘A -->
        <androidx.cardview.widget.CardView
            android:id="@+id/panelTraduccion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toTopOf="@id/btnTraducir"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="#FFFFFF">

                <TextView
                    android:id="@+id/labelTraduccion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="traduccion:"
                    android:textColor="#008E8E"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtReconocido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingTop="8dp"
                    android:paddingBottom="6dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- BotÃ³n circular amarillo para traducir a voz -->
        <Button
            android:id="@+id/btnTraducir"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#009688"
            android:text="ðŸ”Š"
            android:textColor="#000000"
            android:textSize="30sp"
            app:cornerRadius="44dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- MENÃš LATERAL -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#FFFFFF"
        app:headerLayout="@layout/menu_personalizado"
        app:menu="@null" />



</androidx.drawerlayout.widget.DrawerLayout>
